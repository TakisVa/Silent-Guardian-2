{
  "manifest_version": 3,
  "name": "Silent Guardian",
  "version": "1.0.0",
  "description": "Automatically cleans unwanted cookies and rejects trackers while keeping useful ones. Free + Premium features.",
  "permissions": [
    "cookies",
    "storage",
    "tabs",
    "alarms",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.jpg",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.jpg",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}